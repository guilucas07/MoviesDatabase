<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/md_white_1000"
            tools:background="@color/md_blue_100"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/imageAdPoster"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder"/>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/textAdTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Text.Caption"
                    android:textColor="@color/md_black_1000"
                    android:textStyle="bold"
                    android:text="Confira todos os filmes da Marvel"/>

            <TextView
                    android:id="@+id/textAdAction"
                    style="@style/Text.Caption.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_below="@+id/textAdTitle"
                    android:textColor="@color/md_red_600"
                    android:textAllCaps="true"
                    android:text="conferir"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        tools:background="@color/md_blue_100"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

    <ImageView
            android:id="@+id/imageAdPoster"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image_placeholder"/>

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/textAdTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Text.Heading.Small"
                android:textColor="@color/md_black_1000"
                android:textStyle="bold"
                android:text="Confira todos os filmes da Marvel"/>

        <TextView
                android:id="@+id/textAdCheck"
                style="@style/Text.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_below="@+id/textAdTitle"
                android:textColor="@color/md_red_600"
                android:textAllCaps="true"
                android:text="conferir"/>

    </RelativeLayout>
</LinearLayout>

<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text.Body" parent="AppTheme">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Heading.Large" parent="AppTheme">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text.Heading.Medium" parent="AppTheme">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Heading.Small" parent="AppTheme">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Button.Ghost" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
